<%=  @adoption.word_id %>

<h3 id="post_count"><%= pluralize(@adoption.posts.size, "Comments") %></h3>

<div id="comments">
  <%= render :partial => @adoption.posts %>
</div>

<h3>Add A Review </h3>

<button id="go">Run</button>
<div id="block">Hello!</div>

<button>Show it</button>
<p style="display: none">Hello  2</p>



<%= form_for Post.new(:adoption => @adoption, :id => "new_post") do |f| %>
    <%= f.hidden_field :adoption_id %>
    <p>
      <%= f.label :title %> </br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content, "Comment" %> <br/>
      <%= f.text_area :content, :rows => 8 %>
    </p>
    <p><%= f.submit ("Add Review") %> </p>
<% end %>
